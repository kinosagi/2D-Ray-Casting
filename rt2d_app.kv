<TelaPrincipal>:
    FloatLayout:
        Ball:
            pos: self.parent.center_x, self.parent.center_y
            #size_hint: 0.25, 0.2
            text: 'Drag me'


<Ball>:
    canvas:
        Color:
            rgba: 1,0.5,0.5,1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 1,1,1,1
        Ellipse:
            pos: self.pos
            size: dp(30), dp(30)
    
    # Tamanho
    size: dp(30), dp(30)
    size_hint: None, None

    # Drag Behaviour
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_timeout: 10000000
    drag_distance: -10

